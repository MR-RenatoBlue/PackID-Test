<h1>Users</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Actions</th>
      <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user_path(user) %></td>
        <td><%= user.roles.pluck(:name).to_sentence.humanize %></td>
        <td><div class="btn-group" role="group" aria-label=""><%= link_to 'Show', user, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %>
        <%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>