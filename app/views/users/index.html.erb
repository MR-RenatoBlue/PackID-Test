<h1>Users</h1>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col"></th>
      <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user_path(user) %></td>
        <td><%= user.roles.pluck(:name).to_sentence.humanize %></td>
        <td><%= link_to 'Edit User', edit_user_path(user), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= console %>