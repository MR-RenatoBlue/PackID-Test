<% if current_user.has_role? :admin %>
  <h1> User </h1>
<% else %>
  <h1> Your User</h1>
<% end%>

  <p class="font-weight-bold">Email: <%= @user.email %><br></p>
  <p class="font-italic">Member since: <%= @user.created_at.to_formatted_s(:short) %></p>

<% if can? :manage, User %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
<% end %>