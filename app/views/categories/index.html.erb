<h1>Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><div class="btn-group" role="group" aria-label=""><%= link_to 'Show', category, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary" %>
        <%= button_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="form-group">
  <%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
</div>
